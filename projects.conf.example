# IsoClaude Project Configuration (TOML format)
#
# Copy this file to projects.conf and customize
#
# Format:
# [ProjectName]
# path = /full/path/to/project
# git = true|false
# chrome = true|false
#
# The project name (section header) determines the mount point:
#   /projects/<ProjectName> inside the container
#
# git = true    -> .git folder is accessible (for commits/pushes)
# git = false   -> .git folder is excluded (safe isolation, default)
# chrome = true -> Enable Chrome MCP when launching Claude (default)

# Examples:

# [MyApp]
# path = /Users/yourname/projects/MyApp
# git = false
# chrome = true

# [LegacyProject]
# path = /Users/yourname/projects/LegacyProject
# git = true
# chrome = false
